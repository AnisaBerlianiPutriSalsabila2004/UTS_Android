<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/intro1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="30dp"
        app:cardCornerRadius="30dp"
        >

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:background="@color/white"
                    android:textColor="@color/main_purple"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Sigin"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/buttton_alsa"
                    android:textColor="@color/main_white" />

            </LinearLayout>

            <EditText
                android:id="@+id/nama_txt"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/email2"
                android:hint="type your new Name"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="10dp"/>

            <EditText
                android:id="@+id/email_txt"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/password3"
                android:hint="type your new email"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="10dp"/>

            <EditText
                android:id="@+id/password_txt"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/password3"
                android:hint="type your new password"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/regis_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttton_alsa"
                android:layout_marginTop="50dp"
                android:text="Register"
                android:textColor="@color/main_white"
                android:layout_marginBottom="20dp"
                />

